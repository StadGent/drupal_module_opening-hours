<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="pbm_default">
    <description>PHP CodeSniffer configuration for opening_hours module.</description>
    <rule ref="phpcs-ruleset.xml.dist"/>
    <arg name="extensions" value="php,inc,module,install,info,test,profile,theme,css,js"/>
    <arg name="report" value="full"/>
    <arg value="p"/>
    <file>.</file>
    <exclude-pattern>*/build/coverage/*</exclude-pattern>
    <exclude-pattern>*/build/logs/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*.md</exclude-pattern>
</ruleset>
